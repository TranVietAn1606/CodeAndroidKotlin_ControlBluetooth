<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car_background"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/control_main_btn"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/control_main" />

    <ImageButton
        android:id="@+id/sound_main_btn"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="@+id/control_main_btn"
        app:layout_constraintStart_toStartOf="@+id/control_main_btn"
        app:layout_constraintTop_toBottomOf="@+id/control_main_btn"
        app:srcCompat="@drawable/sound_main"
        android:onClick="showPopup"/>

    <ImageButton
        android:id="@+id/info_main_btn"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="@+id/sound_main_btn"
        app:layout_constraintStart_toStartOf="@+id/sound_main_btn"
        app:layout_constraintTop_toBottomOf="@+id/sound_main_btn"
        app:srcCompat="@drawable/info_main" />
</androidx.constraintlayout.widget.ConstraintLayout>